{
  "name": "@iptop/node-fs-cache",
  "version": "1.0.0",
  "description": "A lightweight file system based key-value cache with localStorage-like API",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.js --format cjs,esm --dts",
    "prepublishOnly": "npm run build",
    "test": "node --test"
  },
  "keywords": [
    "cache",
    "kv",
    "key-value",
    "filesystem",
    "storage",
    "messagepack"
  ],
  "license": "MIT",
  "dependencies": {
    "msgpackr": "^1.11.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
